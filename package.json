{
  "name": "todos",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": "GaldanM",
  "main": "dist/main.js",
  "type": "module",
  "prisma": {
    "schema": "src/modules/todo/infrastructure/database/prisma/schema.prisma"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -f src/modules/todo/interface/http/graphql/todo.schema.graphql && rm -f tests/todo/graphql/*.sdk.ts",
    "build": "$npm_execpath clean && $npm_execpath build:swc",
    "build:swc": "$npm_execpath exec swc src -d dist --config-file config/.swcrc --copy-files --strip-leading-paths",
    "codegen": "$npm_execpath build && $npm_execpath codegen:sdl && $npm_execpath codegen:sdk && $npm_execpath codegen:models",
    "codegen:sdl": "node dist/tools/SDLBuilder.js",
    "codegen:sdk": "$npm_execpath exec graphql-codegen --config config/graphql-codegen.ts",
    "codegen:models": "$npm_execpath exec prisma generate",
    "test": "NODE_ENV=test $npm_execpath exec vitest run --config config/vitest.config.ts",
    "start": "$npm_execpath build && NODE_ENV=dev node dist/main --watch",
    "start:debug": "$npm_execpath build && NODE_ENV=dev node dist/main --debug --watch",
    "start:prod": "$npm_execpath build && NODE_ENV=prod node dist/main"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@electric-sql/pglite": "^0.3.5",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/common": "^11.1.4",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.4",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.4",
    "@nestjs/schematics": "^11.0.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "graphql": "^16.11.0",
    "kysely": "^0.28.2",
    "kysely-pglite": "^0.6.1",
    "nestjs-kysely": "^3.0.0",
    "pg": "^8.16.3",
    "prisma": "^6.12.0",
    "prisma-kysely": "^1.8.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript-result": "^3.4.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@nestjs/testing": "^11.1.4",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.14",
    "@swc/helpers": "^0.5.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.14",
    "@types/pg": "^8.15.4",
    "@typescript/native-preview": "7.0.0-dev.20250813.1",
    "@vitest/coverage-v8": "^3.2.4",
    "earl": "^1.3.0",
    "graphql-request": "^7.2.0",
    "graphql-tag": "^2.12.6",
    "source-map-support": "^0.5.21",
    "unplugin-swc": "^1.5.5",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "engineStrict": true,
  "private": true
}
