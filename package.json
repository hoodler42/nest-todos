{
  "name": "todos",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": "GaldanM",
  "private": true,
  "main": "dist/main.js",
  "type": "module",
  "prisma": {
    "schema": "src/modules/todo/infrastructure/persistence/prisma/schema.prisma"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "clean": "rm -rf dist && rm -f src/modules/todo/interface/http/graphql/todo.schema.graphql && rm -f tests/todo/graphql/*.sdk.ts",
    "build": "$npm_execpath clean && $npm_execpath build:swc",
    "build:swc": "$npm_execpath exec swc src -d dist --config-file config/.swcrc --copy-files --strip-leading-paths",
    "codegen": "$npm_execpath build && $npm_execpath codegen:sdl && $npm_execpath codegen:sdk && $npm_execpath codegen:models",
    "codegen:sdl": "node dist/tools/SDLBuilder.js",
    "codegen:sdk": "$npm_execpath exec graphql-codegen --config config/graphql-codegen.ts",
    "codegen:models": "$npm_execpath exec prisma generate",
    "migrate": "$npm_execpath exec dotenv -e .env.dev -- $npm_execpath exec prisma migrate dev",
    "migrate:prod": "$npm_execpath exec dotenv -e .env.dev -- $npm_execpath exec prisma migrate deploy",
    "migrate:status": "$npm_execpath exec dotenv -e .env.dev -- $npm_execpath exec prisma migrate status",
    "test": "NODE_ENV=test $npm_execpath exec vitest run --config config/vitest.config.ts",
    "start": "$npm_execpath build && NODE_ENV=dev node dist/main --watch",
    "start:debug": "$npm_execpath build && NODE_ENV=dev node dist/main --debug --watch",
    "start:prod": "$npm_execpath build && NODE_ENV=prod node dist/main"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.1.2",
    "@electric-sql/pglite": "^0.3.14",
    "@nestjs/apollo": "^13.2.1",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/graphql": "^13.2.0",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/schematics": "^11.0.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv-cli": "^11.0.0",
    "graphql": "^16.12.0",
    "kysely": "^0.28.8",
    "kysely-pglite": "^0.6.1",
    "nestjs-kysely": "^3.1.2",
    "pg": "^8.16.3",
    "prisma": "^7.0.1",
    "prisma-kysely": "^2.2.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript-result": "^3.5.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.5",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@graphql-codegen/typescript-operations": "^5.0.5",
    "@nestjs/testing": "^11.1.9",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@swc/helpers": "^0.5.17",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@typescript/native-preview": "7.0.0-dev.20251128.1",
    "@vitest/coverage-v8": "^4.0.14",
    "earl": "^2.0.0",
    "graphql-request": "^7.3.5",
    "graphql-tag": "^2.12.6",
    "source-map-support": "^0.5.21",
    "unplugin-swc": "^1.5.9",
    "vitest": "^3"
  }
}
