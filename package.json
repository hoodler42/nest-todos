{
  "name": "todos",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": "GaldanM",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist && rm -f src/services/todo/interface/http/graphql/todo.schema.graphql && rm -f src/services/todo/interface/http/graphql/client-request/sdk.ts",
    "build": "yarn clean && yarn build:swc && yarn build:sdls && yarn build:codegen",
    "build:swc": "yarn exec swc src -d dist --config-file config/.swcrc --copy-files --strip-leading-paths",
    "build:sdls": "node dist/tools/SDLBuilder.js",
    "build:codegen": "yarn exec graphql-codegen --config config/codegen.ts",
    "test": "yarn build && yarn test:unit && yarn test:integration && yarn test:e2e",
    "test:unit": "NODE_ENV=test yarn exec cucumber-js --config config/cucumber.mjs -p unit",
    "test:integration": "NODE_ENV=test yarn exec cucumber-js --config config/cucumber.mjs -p integration",
    "test:e2e": "NODE_ENV=test yarn exec cucumber-js --config config/cucumber.mjs -p e2e",
    "start": "yarn build && NODE_ENV=dev node dist/main --watch",
    "start:debug": "yarn build && NODE_ENV=dev node dist/main --debug --watch",
    "start:prod": "yarn build && NODE_ENV=prod node dist/main",
    "migration:generate": "typeorm-ts-node-esm migration:generate ./src/services/todo/infrastructure/database/postgres/migrations/$MIGRATION_NAME -d ./src/services/todo/infrastructure/database/postgres/datasource.ts",
    "migration:show": "typeorm-ts-node-esm migration:show -d ./src/services/todo/infrastructure/database/postgres/datasource.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d ./src/services/todo/infrastructure/database/postgres/datasource.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.10.5",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/typeorm": "^10.0.2",
    "graphql": "^16.9.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@cucumber/cucumber": "^10.8.0",
    "@cucumber/messages": "^25.0.1",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "^4.2.3",
    "@nestjs/testing": "^10.3.10",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.3",
    "@swc/helpers": "^0.5.12",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.4",
    "earl": "^1.3.0",
    "graphql-request": "^7.1.0",
    "graphql-tag": "^2.12.6",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.0.4"
  },
  "packageManager": "yarn@4.3.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "engineStrict": true,
  "private": true
}
