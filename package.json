{
  "name": "todos",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": "GaldanM",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist && rm -f src/modules/todo/interface/http/graphql/todo.schema.graphql && rm -f src/modules/todo/interface/http/graphql/client-request/sdk.ts",
    "build": "yarn clean && yarn build:swc && yarn build:sdls && yarn build:codegen",
    "build:swc": "yarn exec swc src -d dist --config-file config/.swcrc --copy-files --strip-leading-paths",
    "build:sdls": "node dist/tools/SDLBuilder.js",
    "build:codegen": "yarn exec graphql-codegen --config config/graphql-codegen.ts",
    "test": "yarn build && yarn test:units && yarn test:integrations && yarn test:e2e",
    "test:units": "NODE_ENV=test yarn exec vitest --config config/vitest/units.vitest.config.mjs --run",
    "test:integrations": "NODE_ENV=test yarn exec vitest --config config/vitest/integrations.vitest.config.mjs --run",
    "test:e2e": "NODE_ENV=test yarn exec vitest --config config/vitest/e2e.vitest.config.mjs --run",
    "start": "yarn build && NODE_ENV=dev node dist/main --watch",
    "start:debug": "yarn build && NODE_ENV=dev node dist/main --debug --watch",
    "start:prod": "yarn build && NODE_ENV=prod node dist/main",
    "migration:generate": "typeorm-ts-node-esm migration:generate src/modules/todo/infrastructure/database/datasources/postgres/migrations/$MIGRATION_NAME -d src/modules/todo/infrastructure/database/postgres/datasource.ts",
    "migration:show": "typeorm-ts-node-esm migration:show -d src/modules/todo/infrastructure/database/datasources/postgres/datasource.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d src/modules/todo/infrastructure/database/datasources/postgres/datasource.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/common": "^10.4.4",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.9.0",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@amiceli/vitest-cucumber": "^3.7.1",
    "@biomejs/biome": "^1.9.3",
    "@cucumber/cucumber": "^11.0.1",
    "@cucumber/messages": "^26.0.1",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.0",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "^4.3.0",
    "@nestjs/testing": "^10.4.4",
    "@swc/cli": "^0.4.1-nightly.20240914",
    "@swc/core": "^1.7.28",
    "@swc/helpers": "^0.5.13",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "@vitest/coverage-v8": "^2.1.2",
    "earl": "^1.3.0",
    "graphql-request": "^7.1.0",
    "graphql-tag": "^2.12.6",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.1.2"
  },
  "packageManager": "yarn@4.5.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "engineStrict": true,
  "private": true
}
