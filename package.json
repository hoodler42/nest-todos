{
  "name": "todos",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": "GaldanM",
  "private": true,
  "main": "dist/main.js",
  "type": "module",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "clean": "$npm_execpath clean:build && $npm_execpath clean:codegen",
    "clean:build": "rm -rf dist",
    "clean:codegen": "$npm_execpath clean:codegen:sdl && $npm_execpath clean:codegen:sdk && $npm_execpath clean:codegen:models",
    "clean:codegen:sdl": "rm -f src/modules/todo/interface/**/*.schema.graphql",
    "clean:codegen:sdk": "rm -f tests/todo/**/*.sdk.ts",
    "clean:codegen:models": "rm -f src/modules/todo/infrastructure/persistence/kysely/*.kysely.d.ts",
    "build": "$npm_execpath clean:build && $npm_execpath build:swc",
    "build:swc": "$npm_execpath exec swc src -d dist --config-file .config/.swcrc --copy-files --strip-leading-paths",
    "codegen": "$npm_execpath build && $npm_execpath codegen:sdl && $npm_execpath codegen:sdk && $npm_execpath codegen:models",
    "codegen:sdl": "$npm_execpath clean:codegen:sdl && node dist/tools/schema-graphql-codegen.js",
    "codegen:sdk": "$npm_execpath clean:codegen:sdk && $npm_execpath exec graphql-codegen --config .config/sdk-graphql-codegen.ts",
    "codegen:models": "$npm_execpath clean:codegen:models && $npm_execpath exec dotenv -e .env.dev -- $npm_execpath exec prisma generate",
    "migrate": "$npm_execpath exec dotenv -e .env.dev -- $npm_execpath exec prisma migrate dev",
    "migrate:prod": "$npm_execpath exec dotenv -e .env.dev -- $npm_execpath exec prisma migrate deploy",
    "migrate:status": "$npm_execpath exec dotenv -e .env.dev -- $npm_execpath exec prisma migrate status",
    "test": "$npm_execpath exec dotenv -e .env.test -- $npm_execpath exec vitest run --config .config/vitest.config.ts",
    "start": "$npm_execpath build && NODE_ENV=dev node dist/main --watch",
    "start:debug": "$npm_execpath build && NODE_ENV=dev node dist/main --debug --watch",
    "start:prod": "$npm_execpath build && NODE_ENV=prod node dist/main",
    "format": "$npm_execpath exec biome format --write"
  },
  "dependencies": {
    "@effect/platform": "0.93.8",
    "@effect/platform-node": "0.103.0",
    "@hono/node-server": "1.19.7",
    "@pothos/core": "4.10.0",
    "@pothos/plugin-simple-objects": "4.1.3",
    "dotenv-cli": "11.0.0",
    "effect": "3.19.12",
    "graphql": "16.12.0",
    "graphql-yoga": "5.17.1",
    "hono": "4.11.0",
    "kysely": "0.28.9",
    "pg": "8.16.3",
    "prisma": "7.1.0",
    "prisma-kysely": "2.2.1",
    "ts-pattern": "^5.9.0",
    "uuid": "13.0.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@graphql-codegen/cli": "6.1.0",
    "@graphql-codegen/typescript": "5.0.6",
    "@graphql-codegen/typescript-graphql-request": "6.3.0",
    "@graphql-codegen/typescript-operations": "5.0.6",
    "@swc/cli": "0.7.9",
    "@swc/core": "1.15.4",
    "@swc/helpers": "0.5.17",
    "@types/express": "5.0.6",
    "@types/node": "25.0.2",
    "@types/pg": "8.16.0",
    "@vitest/coverage-v8": "4.0.15",
    "graphql-request": "7.4.0",
    "graphql-tag": "2.12.6",
    "kysely-pglite": "0.6.1",
    "source-map-support": "0.5.21",
    "typescript": "5.9.3",
    "unplugin-swc": "1.5.9",
    "vitest": "4.0.15"
  }
}
