{
  "name": "todos",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": "GaldanM",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist && rm -f src/modules/todo/interface/http/graphql/todo.schema.graphql && rm -f tests/todo/graphql/sdk.ts",
    "build": "$npm_execpath clean && $npm_execpath build:swc && $npm_execpath build:codegen",
    "build:swc": "$npm_execpath exec swc src -d dist --config-file config/.swcrc --copy-files --strip-leading-paths",
    "build:codegen": "$npm_execpath build:sdl && $npm_execpath build:sdk",
    "build:sdl": "node dist/tools/SDLBuilder.js",
    "build:sdk": "$npm_execpath exec graphql-codegen --config config/graphql-codegen.ts",
    "test": "$npm_execpath build && $npm_execpath test:units && $npm_execpath test:integrations && $npm_execpath test:e2e",
    "test:units": "NODE_ENV=test $npm_execpath exec vitest --config config/vitest/units.vitest.config.mjs --run",
    "test:integrations": "NODE_ENV=test $npm_execpath exec vitest --config config/vitest/integrations.vitest.config.mjs --run",
    "test:e2e": "NODE_ENV=test $npm_execpath exec vitest --config config/vitest/e2e.vitest.config.mjs --run",
    "start": "$npm_execpath build && NODE_ENV=dev node dist/main --watch",
    "start:debug": "$npm_execpath build && NODE_ENV=dev node dist/main --debug --watch",
    "start:prod": "$npm_execpath build && NODE_ENV=prod node dist/main",
    "migration:generate": "typeorm-ts-node-esm migration:generate src/modules/todo/infrastructure/database/datasources/postgres/migrations/$MIGRATION_NAME -d src/modules/todo/infrastructure/database/postgres/datasource.ts",
    "migration:show": "typeorm-ts-node-esm migration:show -d src/modules/todo/infrastructure/database/datasources/postgres/datasource.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d src/modules/todo/infrastructure/database/datasources/postgres/datasource.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "graphql": "^16.11.0",
    "pg": "^8.16.3",
    "pg-mem": "^3.0.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.25",
    "typescript-result": "^3.3.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.11",
    "@swc/helpers": "^0.5.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "earl": "^1.3.0",
    "graphql-request": "^7.2.0",
    "graphql-tag": "^2.12.6",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.5",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "engineStrict": true,
  "private": true
}
